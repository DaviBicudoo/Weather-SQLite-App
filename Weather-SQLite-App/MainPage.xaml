<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather_SQLite_App.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30, 0" Spacing="25">
            <Entry x:Name="cityEntry" Placeholder="Ghana"/>
            <Button x:Name="searchButton" Text="Get weather" Clicked="searchButton_Clicked" />

            <Label x:Name="responseLabel" />

            <Button x:Name="SaveWeatherButton" Text="Save weather data" Clicked="SaveWeatherButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
